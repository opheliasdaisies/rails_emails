<h1>Listing emails</h1>

<table>
  <tr>
    <th>To</th>
    <th>From</th>
    <th>Subject</th>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @emails.each do |email| %>
    <tr>
      <td><%= email.to %></td>
      <td><%= email.from %></td>
      <td><%= email.subject %></td>
      <td><%= email.body %></td>
      <td><%= link_to "Show", email%></td>
      <td><%= link_to "Edit", edit_email_path(email) %></td>
      <td><%= button_to "Destroy", email, method: :delete, data: { confirm: "Are you sure?"} %></td>
    </tr>
  <% end%>
</table>

<br>

<%= link_to 'New Email', new_email_path %>